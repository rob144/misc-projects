<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - University LMS</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <p class="site-title">@Html.ActionLink("University LMS", "Index", "Home")</p>
                @Html.Partial("LoginControl")
                <ul id="menu">
                    <li><div>@Html.ActionLink("Home", "Index", "Home")</div></li>
                    <li><div>@Html.ActionLink("Students", "Index", "Student")</div></li>
                    <li><div>@Html.ActionLink("Courses", "Index", "Course")</div></li>
                    <li><div>@Html.ActionLink("Instructors", "Index", "Instructor")</div></li>
                </ul>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - University LMS - Created by Robin Dunn</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>