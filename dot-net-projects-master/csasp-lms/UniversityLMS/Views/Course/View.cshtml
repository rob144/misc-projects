@model UniversityLMS.Models.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Course</h2>

@using (Html.BeginForm("Edit", "Course", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Course</legend>

        @Html.HiddenFor(model => model.CourseID)

        <div class="editor-fields-section" >

            <div class="editor-label">
                @Html.LabelFor(model => model.CourseIDExternal)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CourseIDExternal)
                @Html.ValidationMessageFor(model => model.CourseIDExternal)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Credits)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Credits)
                @Html.ValidationMessageFor(model => model.Credits)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.DateCreated)
            </div>
            <div class="editor-field">
                <input id="DateCreated-disabled" name="DateCreated-disabled" type="text" value="@Model.DateCreated" disabled="disabled"/>
                 @Html.HiddenFor(model => model.DateCreated)
            </div>
        
            <div class="editor-label">
                Instructors :
            </div>
            <div id="edit-course-instructors" class="editor-field">
                @Html.EditorFor(model => model.Instructors)
            </div>

        </div>
        
        <div class="form-actions">
            <input id="submit" class="button" type="submit" value="Save" />
            @Html.ActionLink("Back to List", "Index")
        </div>

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
